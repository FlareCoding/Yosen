import stdio;

class Car
{
    var speed = 10;
    var name = null;

    func Car(self, name) {
        io::println("Car constructor called!");
        self.name = name;

        return self;
    }

    // Static function
    func getWheelCount() {
        return 4;
    }

    func setSpeed(self, speed) {
        self.speed = speed;
    }
};

func main()
{
    io::println("----- Testing the Class System -----\n");

    io::println("Wheel count: " + Car::getWheelCount());

    var car = new Car("Mercedes");
    io::println("Name  : " + car.name);
    io::println("Speed : " + car.speed);

    car.setSpeed(45);

    io::println("Speed : " + car.speed);

    //
    // * Tests for the future *
    //
    //      1) car.foo.data = 14;
    //      2) car.foo.log();
    //
}
